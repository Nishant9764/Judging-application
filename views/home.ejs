      </div>
    </section>

    <!-- Footer -->
    <footer>
      <p>
        &copy; <%= new Date().getFullYear() %> Event Management System. All
        Rights Reserved.
      </p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
