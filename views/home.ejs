<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ISKCON NRJD</title>
    <link rel="stylesheet" href="/home.css">
   
</head>
<body>
    <div class="container">
      
        <header class="header">
            <div class="logo-left">
                <div class="iskcon-logo">
                    <div class="lotus-symbol">
                        <i class="fas fa-dharmachakra"></i>
                    </div>
                    <div class="logo-text">
                        <span class="iskcon">ISKCON</span>
                        <span class="subtitle">Magadi Main Road</span>
                    </div>
                </div>
            </div>

            <div class="title-section">
                <h1 class="main-title">International Society for Krishna Consciousness</h1>
                <h2 class="founder-title">Founder -Acharya: His Divine Grace A.C. Bhaktivedanta Swami Prabhupada</h2>
            </div>

            <div class="logo-right">
                <div class="prabhupada-image">
                    <div class="circular-frame">
                        <i class="fas fa-om"></i>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content Section -->
        <main class="main-content">
            <div class="krishna-section">
                <div class="krishna-illustration">
                    <div class="krishna-figure">
                        <div class="peacock-feather">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <div class="krishna-body">
                            <div class="face"></div>
                            <div class="flute">
                                <i class="fas fa-music"></i>
                            </div>
                        </div>
                        <div class="peacock-feathers">
                            <i class="fas fa-leaf"></i>
                            <i class="fas fa-leaf"></i>
                        </div>
                    </div>
                </div>

                <div class="hare-krishna-text">
                    <span class="hare">HARE</span>
                    <span class="krishna">KRISHNA</span>
                </div>
            </div>

            <!-- Contact Button -->
            <div class="contact-section">
                <button class="contact-btn">
                    <i class="fas fa-phone"></i>
                </button>
            </div>

            <!-- Scroll Indicator -->
            <div class="scroll-indicator">
                <div class="chevron-down">
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </main>
    </div>
</body>
</html>